{
  "id": null,
  "title": "Financial Monitoring Overview",
  "tags": ["financial", "monitoring", "overview"],
  "style": "dark",
  "timezone": "browser",
  "editable": true,
  "hideControls": false,
  "graphTooltip": 1,
  "refresh": "5s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"],
    "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
  },
  "templating": {
    "list": [
      {
        "name": "portfolio_id",
        "type": "query",
        "query": "label_values(portfolio_total_pnl, portfolio_id)",
        "current": {
          "value": "1",
          "text": "Portfolio 1"
        },
        "options": [],
        "refresh": 1,
        "includeAll": false,
        "multi": false
      }
    ]
  },
  "annotations": {
    "list": [
      {
        "name": "Alerts",
        "datasource": "Prometheus",
        "enable": true,
        "expr": "ALERTS{alertstate=\"firing\"}",
        "iconColor": "rgba(255, 96, 96, 1)",
        "limit": 100,
        "showIn": 0,
        "step": "60s",
        "tags": [],
        "type": "tags"
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "Portfolio P&L",
      "type": "stat",
      "targets": [
        {
          "expr": "portfolio_total_pnl{portfolio_id=\"$portfolio_id\"}",
          "legendFormat": "Total P&L",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": null},
              {"color": "yellow", "value": 0},
              {"color": "green", "value": 10000}
            ]
          },
          "unit": "currencyUSD",
          "decimals": 0,
          "displayName": "Portfolio P&L"
        }
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "auto"
      },
      "pluginVersion": "8.0.0",
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0}
    },
